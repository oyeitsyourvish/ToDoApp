@model ToDoPortal.Models.ToDoViewModel

<h1>Add Your Note</h1>
<form method="post">
    <div class="mt-3">
        <label class="form-lable">Title</label>
        <input type="text" class="form-control" asp-for="Title" />
    </div>

    <div class="mt-3">
        <label class="form-lable">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-lable">Date</label>
        <input type="date" class="form-control" asp-for="Date" />
    </div>

    <div class="mt-3">
            <input class="form-check-input" type="checkbox" id="Important"/>
            <label class="form-check-label" for="Important">Important</label>
    </div>

    <div class="mt-3">
        <button class="btn btn-outline-success">Save Note</button>
    </div>
</form>